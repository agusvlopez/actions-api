{
  "compilerOptions": {
    "target": "ES2022",                         
    "module": "NodeNext",                       
    "moduleResolution": "NodeNext",            
    "outDir": "dist",                           
    "rootDir": ".",                             
    "sourceMap": true,                          
    "allowJs": true,                            
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "strict": true,                            
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "noEmit": true                    
  },
  "include": ["*.ts"],                          
  "exclude": ["node_modules", "dist"]
}

